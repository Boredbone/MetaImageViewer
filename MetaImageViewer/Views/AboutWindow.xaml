<Window x:Class="MetaImageViewer.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetaImageViewer.Views"
        mc:Ignorable="d"
        Title="About" Height="300" Width="300" 
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <StackPanel>
        <TextBlock Text="Meta Image Viewer"/>
        <TextBlock Text="Boredbone"/>
        <TextBlock>
            <Run Text="Version "/>
            <Run Name="versionText" Text="1.0"/>
        </TextBlock>
        <TextBlock>
            <Run Text="Date "/>
            <Run Name="buildDate" Text="1.0"/>
        </TextBlock>
        <TextBlock>
            <Hyperlink NavigateUri="https://github.com/Boredbone/MetaImageViewer/blob/master/UsingLicense.md" 
                       RequestNavigate="Hyperlink_RequestNavigate">
                <TextBlock Text="License"/>
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>
